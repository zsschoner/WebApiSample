      </serviceBehaviors>
      <endpointBehaviors>
        <behavior name="web">
          <webHttp />
          <!--<enableWebScript/>-->
        </behavior>
      </endpointBehaviors>
    </behaviors>
    <serviceHostingEnvironment multipleSiteBindingsEnabled="true" aspNetCompatibilityEnabled="true" />
